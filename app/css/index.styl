body, html
	margin 0
	padding 0
	width 100%
	height 100%

body *
	transform translateZ(0)

.graphics-container
	width 100%
	height 100%
	overflow hidden

.svg-container
	position absolute
	width 2000px
	max-height 100vh
	bottom 0
	left 50%
	transform translateX(-50%)
	@media all and (max-width 830px)
		width 241%